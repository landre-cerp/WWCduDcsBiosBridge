<Window x:Class="WWCduDcsBiosBridge.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DCS-BIOS Configuration" 
        Height="500" 
        Width="600"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="DCS-BIOS Configuration Settings" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Configuration Panel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Network Settings Group -->
                <GroupBox Header="Network Settings" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Receive IP -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Receive IP:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,5"/>
                        <TextBox x:Name="ReceiveIpTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Margin="10,5"
                                 ToolTip="IP address to receive UDP data from DCS-BIOS (multicast address)"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                   Text="(Multicast)" 
                                   VerticalAlignment="Center" 
                                   Foreground="Gray" 
                                   FontStyle="Italic"/>

                        <!-- Send IP -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Send IP:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,5"/>
                        <TextBox x:Name="SendIpTextBox" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Margin="10,5"
                                 ToolTip="IP address to send UDP data to DCS-BIOS"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                                   Text="(Usually localhost)" 
                                   VerticalAlignment="Center" 
                                   Foreground="Gray" 
                                   FontStyle="Italic"/>

                        <!-- Receive Port -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Receive Port:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,5"/>
                        <TextBox x:Name="ReceivePortTextBox" 
                                 Grid.Row="2" Grid.Column="1" 
                                 Margin="10,5"
                                 ToolTip="Port number to receive UDP data from DCS-BIOS"/>

                        <!-- Send Port -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Send Port:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,5"/>
                        <TextBox x:Name="SendPortTextBox" 
                                 Grid.Row="3" Grid.Column="1" 
                                 Margin="10,5"
                                 ToolTip="Port number to send UDP data to DCS-BIOS"/>
                    </Grid>
                </GroupBox>

                <!-- File Locations Group -->
                <GroupBox Header="File Locations" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="DCS-BIOS JSON:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,5"/>
                        <TextBox x:Name="JsonLocationTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Margin="10,5"
                                 ToolTip="Path to the directory containing DCS-BIOS JSON files"/>
                        <Button x:Name="BrowseButton" 
                                Grid.Row="0" Grid.Column="2" 
                                Content="Browse..." 
                                Width="80" 
                                Margin="5"
                                Click="BrowseButton_Click"/>

                        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                   Text="This should point to the directory containing aircraft-specific JSON files from DCS-BIOS"
                                   Foreground="Gray" 
                                   FontStyle="Italic" 
                                   TextWrapping="Wrap"
                                   Margin="10,0"/>
                    </Grid>
                </GroupBox>

                <!-- Default Values Info -->
                <GroupBox Header="Default Values" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Default Network Settings:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Receive IP: 239.255.50.10 (DCS-BIOS multicast)" Margin="10,2"/>
                        <TextBlock Text="Send IP: 127.0.0.1 (localhost)" Margin="10,2"/>
                        <TextBlock Text="Receive Port: 5010" Margin="10,2"/>
                        <TextBlock Text="Send Port: 7778" Margin="10,2"/>

                        <Button x:Name="ResetToDefaultsButton" 
                                Content="Reset to Defaults" 
                                Width="130" 
                                Height="25" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                Click="ResetToDefaultsButton_Click"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="100" 
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>