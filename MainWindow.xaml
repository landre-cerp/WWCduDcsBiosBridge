<Window x:Class="WWCduDcsBiosBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MCDU DCS-BIOS Bridge Configuration" 
        Height="650" 
        MinHeight="600"
        Width="640"
        MinWidth="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Green" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding StatusIsError}" Value="True">
                    <Setter Property="Foreground" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Winwing Devices DCS-BIOS Bridge" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- Global Aircraft Selection (only visible when no CDU connected) -->
        <GroupBox x:Name="GlobalAircraftSelectionGroup"
                  Grid.Row="1"
                  Header="Aircraft Selection"
                  Padding="8"
                  Margin="0,0,0,15"
                  Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="No CDU connected. Select an aircraft to start the bridge:"
                          TextWrapping="Wrap"
                          Margin="0,0,0,8"
                          Foreground="Gray"/>
                
                <TextBlock x:Name="AircraftSelectionStatus"
                          Text="No aircraft selected"
                          FontWeight="Bold"
                          Foreground="Orange"
                          Margin="0,0,0,8"/>

                <Grid x:Name="GlobalAircraftButtonGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="BtnA10C" Content="A-10C" Grid.Row="0" Grid.Column="0" 
                            Margin="3" Padding="8,4" Click="AircraftButton_Click" Tag="A10C"/>
                    <Button x:Name="BtnAH64D" Content="AH-64D" Grid.Row="0" Grid.Column="1" 
                            Margin="3" Padding="8,4" Click="AircraftButton_Click" Tag="AH64D"/>
                    <Button x:Name="BtnFA18C" Content="F/A-18C" Grid.Row="0" Grid.Column="2" 
                            Margin="3" Padding="8,4" Click="AircraftButton_Click" Tag="FA18C"/>
                    <Button x:Name="BtnF15E" Content="F-15E" Grid.Row="0" Grid.Column="3" 
                            Margin="3" Padding="8,4" Click="AircraftButton_Click" Tag="F15E"/>
                    <Button x:Name="BtnCH47Pilot" Content="CH-47F (PLT)" Grid.Row="1" Grid.Column="0" 
                            Margin="3" Padding="8,4" Click="AircraftButton_Click" Tag="CH47_PLT"/>
                    <Button x:Name="BtnCH47Copilot" Content="CH-47F (CPLT)" Grid.Row="1" Grid.Column="1" 
                            Margin="3" Padding="8,4" Click="AircraftButton_Click" Tag="CH47_CPLT"/>
                    <Button x:Name="BtnM2000C" Content="M-2000C" Grid.Row="1" Grid.Column="2" 
                            Margin="3" Padding="8,4" Click="AircraftButton_Click" Tag="M2000C"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Tab Control -->
        <TabControl x:Name="MainTabControl" Grid.Row="2" Margin="0,0,0,15">
            <TabItem Header="Configuration" x:Name="ConfigurationTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10" IsEnabled="{Binding CanEdit}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- First Row: Global Options and Application Options -->
                        <GroupBox Header="Global Options" Padding="10" Margin="0,0,5,10" Grid.Row="0" Grid.Column="0">
                            <StackPanel>
                                <CheckBox x:Name="DisableLightingManagementCheckBox" 
                                  Content="Disable Lighting Management"
                                  ToolTip="Disable lighting management (for SimApp Pro users)"
                                  Margin="0,5"
                                  Checked="OptionCheckBox_Changed"
                                  Unchecked="OptionCheckBox_Changed"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Application Options" Padding="10" Margin="5,0,0,10" Grid.Row="0" Grid.Column="1">
                            <StackPanel>
                                <CheckBox x:Name="AutoStartCheckBox" 
                                      Content="Auto-start bridge"
                                      ToolTip="Automatically start the bridge when conditions are met"
                                      Margin="0,5"
                                      Checked="OptionCheckBox_Changed"
                                      Unchecked="OptionCheckBox_Changed"/>
                                <CheckBox x:Name="MinimizeOnStartCheckBox" 
                                      Content="Minimize window on start"
                                      ToolTip="Minimize the application window when the bridge starts"
                                      Margin="0,5"
                                      Checked="OptionCheckBox_Changed"
                                      Unchecked="OptionCheckBox_Changed"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Second Row: A10C Options and CH-47F Options -->
                        <GroupBox Header="A10C Options" Padding="10" Margin="0,0,5,0" Grid.Row="1" Grid.Column="0">
                            <StackPanel>
                                <CheckBox x:Name="DisplayBottomAlignedCheckBox" 
                                          Content="Display Bottom Aligned"
                                          ToolTip="Display is aligned to bottom of the screen"
                                          Margin="0,5"
                                          Checked="OptionCheckBox_Changed"
                                          Unchecked="OptionCheckBox_Changed"/>

                                <CheckBox x:Name="DisplayCMSCheckBox" 
                                          Content="Display CMS"
                                          ToolTip="Display CMS on the screen"
                                          Margin="0,5"
                                          Checked="OptionCheckBox_Changed"
                                          Unchecked="OptionCheckBox_Changed"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="CH-47F Options" Padding="10" Margin="5,0,0,0" Grid.Row="1" Grid.Column="1">
                            <StackPanel>
                                <CheckBox x:Name="CH47LinkedBrightnessCheckBox" 
                                      Content="Linked Background Brightness"
                                      ToolTip="when ticked everything is bound to the CDU knob"
                                      Margin="0,5"
                                      Checked="OptionCheckBox_Changed"
                                      Unchecked="OptionCheckBox_Changed"/>

                                <CheckBox x:Name="CH47SingleCduSwitch" 
                                      Content="Switches CDU display with seat position"
                                      ToolTip="Useful if you have only 1 cdu"
                                      Margin="0,5"
                                      Checked="OptionCheckBox_Changed"
                                      Unchecked="OptionCheckBox_Changed"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Update Notification Banner -->
        <Border Grid.Row="3"
                Background="#FFFDF5D7"
                BorderBrush="#FFE6C200"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,10"
                Visibility="{Binding IsUpdateVisible, Converter={StaticResource BoolToVisibility}}">
            <DockPanel LastChildFill="False">
                <TextBlock Text="{Binding UpdateMessage}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="#664400"/>
                <Button Content="Open release"
                        Click="OpenUpdateLink_Click"
                        Margin="0,0,6,0"
                        Padding="10,4"
                        MinWidth="110" />
                <Button Content="Dismiss"
                        Click="DismissUpdate_Click"
                        Padding="10,4"
                        MinWidth="90" />
            </DockPanel>
        </Border>

        <!-- Status Indicator -->
        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="4"
                   Text="{Binding StatusMessage}" 
                   Style="{StaticResource StatusTextStyle}"
                   FontSize="13"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   TextTrimming="CharacterEllipsis"
                   MaxWidth="400"
                   VerticalAlignment="Center"/>

        <!-- Control Buttons Row -->
        <Grid Grid.Row="5" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="ConfigButton" 
                    Content="Edit DCS-BIOS Configuration" 
                    Width="200" 
                    Height="30"
                    HorizontalAlignment="Left"
                    Click="ConfigButton_Click"
                    Grid.Column="0"
                    IsEnabled="{Binding CanEdit}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <Button x:Name="StartButton" 
                        Content="Start Bridge"
                        Width="100"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="StartButton_Click"/>
                <Button x:Name="ExitButton" 
                        Content="Exit" 
                        Width="100" 
                        Height="30"
                        Click="ExitButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>