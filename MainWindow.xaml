<Window x:Class="WWCduDcsBiosBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:WWCduDcsBiosBridge.UI"
        Title="MCDU DCS-BIOS Bridge Configuration" 
        Height="650" 
        MinHeight="600"
        Width="640"
        MinWidth="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Winwing Devices DCS-BIOS Bridge" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- Global Aircraft Selection (only visible when no CDU connected) -->
        <ui:AircraftSelectionPanel x:Name="AircraftPanel"
                                    Grid.Row="1"
                                    Visibility="Collapsed"/>

        <!-- Tab Control -->
        <TabControl x:Name="MainTabControl" Grid.Row="2" Margin="0,0,0,15">
            <TabItem Header="Configuration" x:Name="ConfigurationTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ui:OptionsPanel x:Name="OptionsPanel" 
                                     Margin="10" 
                                     IsEnabled="{Binding CanEdit}"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Update Notification Banner -->
        <Border Grid.Row="3"
                Background="#FFFDF5D7"
                BorderBrush="#FFE6C200"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,10"
                Visibility="{Binding IsUpdateVisible, Converter={StaticResource BoolToVisibility}}">
            <DockPanel LastChildFill="False">
                <TextBlock Text="{Binding UpdateMessage}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="#664400"/>
                <Button Content="Open release"
                        Click="OpenUpdateLink_Click"
                        Margin="0,0,6,0"
                        Padding="10,4"
                        MinWidth="110" />
                <Button Content="Dismiss"
                        Click="DismissUpdate_Click"
                        Padding="10,4"
                        MinWidth="90" />
            </DockPanel>
        </Border>

        <!-- Status Indicator -->
        <ui:StatusBarControl x:Name="StatusControl"
                             Grid.Row="4"
                             Margin="0,10,0,0"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             MaxWidth="400"/>

        <!-- Control Buttons Row -->
        <Grid Grid.Row="5" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="ConfigButton" 
                    Content="Edit DCS-BIOS Configuration" 
                    Width="200" 
                    Height="30"
                    HorizontalAlignment="Left"
                    Click="ConfigButton_Click"
                    Grid.Column="0"
                    IsEnabled="{Binding CanEdit}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <Button x:Name="StartButton" 
                        Content="Start Bridge"
                        Width="100"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="StartButton_Click"/>
                <Button x:Name="ExitButton" 
                        Content="Exit" 
                        Width="100" 
                        Height="30"
                        Click="ExitButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>